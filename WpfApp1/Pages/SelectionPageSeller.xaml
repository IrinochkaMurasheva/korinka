      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectionPageSeller">

    <Grid>
        <Button Name="Organization" Content="Карточка организации" HorizontalAlignment="Left" Margin="129,50,0,0" VerticalAlignment="Top" Height="50" Width="160" Click="Organization_Click"/>
        <Button Name="EditProduct" Content="Изменить товар" HorizontalAlignment="Left" Margin="520,50,0,0" VerticalAlignment="Top" Height="50" Width="160" Click="EditProduct_Click"/>
