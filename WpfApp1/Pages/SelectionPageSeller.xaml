        <Button Name="AddServices" Content="Добавить услуги" HorizontalAlignment="Left" Margin="129,350,0,0" VerticalAlignment="Top" Height="50" Width="160" Click="AddServices_Click"/>
        <Button Name="EditServices" Content="Изменить услуги" HorizontalAlignment="Left" Margin="520,350,0,0" VerticalAlignment="Top" Height="50" Width="160" Click="EditServices_Click"/>
        <Button Name="Exit" Content="Выход" HorizontalAlignment="Left" Margin="378,419,0,0" VerticalAlignment="Top" Click="Exit_Click"/>
        <Label Name="OrganizationName" Content="" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="168"/>

